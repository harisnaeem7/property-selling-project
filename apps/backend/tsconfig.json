{
  "compilerOptions": {
    "target": "ES2020", // Modern Node features
    "module": "CommonJS", // Node module system
    "rootDir": "./src", // Source files folder
    "outDir": "./dist", // Compiled output folder
    "strict": true, // Enable all strict type checks
    "esModuleInterop": true, // Import CommonJS modules with default syntax
    "moduleResolution": "node", // Module resolution for Node.js
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Skip type checking of node_modules
    "resolveJsonModule": true, // Allow importing JSON files
    "sourceMap": true, // Generate source maps
    "noUncheckedIndexedAccess": true, // Safety for indexed access
    "exactOptionalPropertyTypes": true, // Stricter optional checks
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
